{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@screens/*": ["src/screens/*"],
			"@hooks/*": ["src/hooks/*"],
			"@components/*": ["src/components/*"],
			"@api/*": ["src/api/*"],
			"@zod-schemas/*": ["src/zod-schemas/*"],
			"@states/*": ["src/states/*"],
			"@providers/*": ["src/providers/*"],
			"@configs/*": ["src/configs/*"],
			"@assets/*": ["src/assets/*"],
			"@utils/*": ["src/utils/*"],
			"@ts/*": ["src/ts/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
